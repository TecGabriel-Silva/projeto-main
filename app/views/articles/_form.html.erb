<%= form_with model: article do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% article.errors.full_messages_for(:name).each do |message|%>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
        <% article.errors.full_messages_for(:description).each do |message|%>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.text_field :price %>
        <% article.errors.full_messages_for(:price).each do |message|%>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>